<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:baselineAligned="false"
    android:background="#F3F3F3"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/id_tab_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/id_img_home"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/menu_item_home_selected" />

        <TextView
            android:id="@+id/id_text_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页"
            android:textColor="@color/tab_text_selected"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_tab_squart"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/id_img_squart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/menu_item_squart_normal" />

        <TextView
            android:id="@+id/id_text_squart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广场"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_tab_hot"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/id_img_hot"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/menu_item_hot_normal" />

        <TextView
            android:id="@+id/id_text_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_tab_user"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/id_img_user"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/menu_item_user_normal" />

        <TextView
            android:id="@+id/id_text_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>